<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sprintwind.packetcapturetool.MainActivity" >
    
	<TableLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:weightSum="4"
	    android:id="@+id/tbllyout" >
	    <TableRow 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" >
	        <TextView
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:id="@+id/tvChoseInterface"
	        android:text="@string/chose_interface"
	        >
			</TextView>
	
		    <Spinner 
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_weight="1"
		        android:id="@+id/spinnerInterface"
		        />
	        
	    </TableRow>    
 		
	    <TableRow 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="@string/choose_protocol"
		        android:id="@+id/tvChooseProtocol" >
		    </TextView>
		    <Spinner 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:id="@+id/spinProtocol" >
		    </Spinner>
		 </TableRow>
		 
	    <TableRow 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="@string/capture_size"
		        android:id="@+id/tvCapSize" >
		    </TextView>
		    <EditText 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:inputType="number"
		        android:text="@string/default_capture_size"
		        android:id="@+id/etCapSize" >
		    </EditText>	        
	    </TableRow>
	    
	    <TableRow 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="@string/save_file_name"
		        android:id="@+id/tvFileName" >
		    </TextView>
		    <EditText 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:inputType="number"
		        android:id="@+id/etFileName" >
		    </EditText>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="@string/pcap_file_suffix"
		         >
		    </TextView>	        
	    </TableRow>
	    
	</TableLayout>
	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tbllyout"
	    android:weightSum="2"
	    android:orientation="vertical"	>
	    
	    <Button 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:id="@+id/btnStartCapture"
	        android:text="@string/start_capture"/>
	    <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:id="@+id/tvStatus"/>
	    
	    
	</LinearLayout>

</RelativeLayout>
